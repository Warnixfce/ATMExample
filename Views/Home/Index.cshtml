@model ATMExercise.Models.ViewModels.TarjetaViewModel
@{
    ViewData["Title"] = "Home Page";
    ViewBag.Numero = "";
}


<div class="text-center">
    <h1 class="display-4">Origin Bank ATM</h1>
    <h2 class="display-5">Bienvenido!</h2>
    <p>Ingrese los 16 dígitos de su tarjeta:</p>
    <form asp-action="PIN" asp-controller="Home">
    <div class="btn-group-vertical ml-4 mt-4" role="group" aria-label="Basic example">
        <div class="btn-group">
            @Html.TextBoxFor(model=> model.NumeroTarjeta, new { @class = "text-center form-control-lg mb-2" })
           @* <input class="text-center form-control-lg mb-2" id="code" >*@
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary py-3" onclick="document.getElementById('NumeroTarjeta').value=document.getElementById('NumeroTarjeta').value + '1';">1</button>
            <button type="button" class="btn btn-outline-secondary py-3" onclick="document.getElementById('NumeroTarjeta').value=document.getElementById('NumeroTarjeta').value + '2';">2</button>
